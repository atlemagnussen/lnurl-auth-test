{
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": false,
        "files": true,
        "esm": true,
        "compilerOptions": {
            "noImplicitAny": true,
        }
    },
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "lib",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}