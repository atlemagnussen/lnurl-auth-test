{
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": false,
        "files": true,
        "esm": true,
        "compilerOptions": {
            "noImplicitAny": true,
            "baseUrl": ".",
            "paths": {
                "@lib/*": ["src/*"],
                "@common/*": ["../common/*"]
            }
        }
    },
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "lib",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/*"],
            "@common/*": ["../common/*"]
        }
    },
    "include": [
        "src/**/*",
        "../common/declarations.d.ts"
    ],
    "exclude": ["node_modules", "lib"]
}